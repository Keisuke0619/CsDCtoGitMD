<Window x:Class="ConvertUnityInfoToMarkDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertUnityInfoToMarkDown"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name = "InputBox" Margin="40,50,0,40" TextWrapping="Wrap" AcceptsReturn = "True" HorizontalAlignment="Left" Width="270" TextChanged="InputBox_TextChanged"/>
        <TextBox Name = "OutputBox" Margin="0,50,40,40" TextWrapping="Wrap" AcceptsReturn = "True" Text="TextBox" HorizontalAlignment="Right" Width="270"/>
        <Button Content="クリップボードにコピー" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Height="51" Width="96" Click="Button_Click"/>

    </Grid>
</Window>
